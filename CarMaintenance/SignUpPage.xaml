<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="CarMaintenance.SignupPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="LogIn" Clicked="LoginButtonClicked"/>
    </ContentPage.ToolbarItems>


    <ContentPage.Content>
        <StackLayout>
            <Label Text="Username"/>
            <Entry x:Name="UsernameEntry" Placeholder="Username"/>
            <Label Text="Password"/>
            <Entry x:Name="PasswordEntry" Placeholder="Password"/>
            <Label Text=" Email"/>
            <Entry x:Name="EmailEntry" Placeholder="Email ID"/>
            <Button Text="SignUp" Clicked="SignUpButtonClicked"/>
            <Label x:Name="errortext"/>
        </StackLayout>


    </ContentPage.Content>



</ContentPage>  